#include <stdio.h>
#include <string.h>

void explode(char str1[], char splitter, char str2[][10], int *count) {
    int len = strlen(str1);
    int idx = 0;
    int j = 0;
    
    *count = 0;
    
    for (int i = 0; i < len; i++) {
        if (str1[i] == splitter) {
            str2[idx][j] = '\0';
            idx++;
            j = 0;
        } else {
            str2[idx][j] = str1[i];
            j++;
        }
    }
    
    str2[idx][j] = '\0';
    *count = idx + 1;
}

int main() {
    char out[20][10];
    int num;
    explode("I/Love/You", '/', out, &num);
    
    for (int i = 0; i < num; i++) {
        printf("str2[%d] = \"%s\"\n", i, out[i]);
    }
    printf("\ncount = %d\n", num);
    
    return 0;
}
