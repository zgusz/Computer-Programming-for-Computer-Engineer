#include <stdio.h>

void explode(char str1[], char splitter, char str2[][10], int *count) {
    int i = 0;
    int word = 0;
    int pos = 0;
    
    while (str1[i] != '\0') {
        if (str1[i] == splitter) {
            str2[word][pos] = '\0';
            word++;
            pos = 0;
        } else {
            str2[word][pos] = str1[i];
            pos++;
        }
        i++;
    }
    
    str2[word][pos] = '\0';
    *count = word + 1;
}

int main() {
    char out[20][10];
    int num;
    explode("Hello/Welcome", '/', out, &num);
    
    for (int i = 0; i < num; i++) {
        printf("str2[%d] = \"%s\"\n", i, out[i]);
    }
    printf("\ncount = %d\n", num);
    
    return 0;
}
