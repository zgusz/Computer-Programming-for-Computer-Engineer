#include <stdio.h>
#include <stdlib.h>

void GetMatrix(int value[], int *row, int *col) {
    printf("Enter number of rows: ");
    scanf("%d", row);
    
    printf("Enter number of columns: ");
    scanf("%d", col);
    
    printf("Enter %d members:\n", (*row) * (*col));
    for (int i = 0; i < (*row) * (*col); i++) {
        scanf("%d", &value[i]);
    }
}

int main() {
    int *data, m, n;
    
    data = (int*)malloc(100 * sizeof(int));
    
    GetMatrix(data, &m, &n);
    
    printf("\nMatrix (%dx%d):\n", m, n);
    for (int i = 0; i < m; i++) {
        for (int j = 0; j < n; j++) {
            printf("%d ", data[i * n + j]);
        }
        printf("\n");
    }
    
    free(data);
    
    return 0;
}
