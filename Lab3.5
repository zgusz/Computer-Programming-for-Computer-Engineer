#include <stdio.h>

struct student {
    char name[50];
    int id, age;
};

struct student (*GetStudent(int *room))[10] {
    static struct student children[10][10];
    
    printf("Enter number of rooms: ");
    scanf("%d", room);
    
    for (int i = 0; i < *room; i++) {
        int numStudent;
        printf("Enter number of students in room %d: ", i + 1);
        scanf("%d", &numStudent);
        
        if (numStudent > 10) numStudent = 10;
        
        for (int j = 0; j < numStudent; j++) {
            printf("Student %d:\n", j + 1);
            printf("Name: ");
            scanf(" %[^\n]", children[i][j].name);
            printf("ID: ");
            scanf("%d", &children[i][j].id);
            printf("Age: ");
            scanf("%d", &children[i][j].age);
        }
    }
    
    return children;
}

int main() {
    struct student (*children)[10];
    int group;
    children = GetStudent(&group);
    return 0;
}
